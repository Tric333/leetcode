class Solution:
    def longestCommonPrefix(self, strs) -> str:

        if len(strs) == 0:
            return ''
        elif len(strs) == 1:
            return strs[0]
        else:
            max_len = len(strs[0])

        for i in strs:
            max_len = min(max_len,len(i))

        ans =  ''
        for i in range(max_len-1):
            for j in range(len(strs)-1):
                if strs[j][i] != strs[j+1][i]:
                    return ans
            ans += strs[j][i]
        return ans
